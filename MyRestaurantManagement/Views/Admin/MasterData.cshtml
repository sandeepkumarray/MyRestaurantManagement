@model MyRestaurantManagement.Models.AdminHomeViewModel

@{
    ViewData["Title"] = "MasterData";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12 my-5">
        <div class="card">
            <div class="card-header"> Order Statuses</div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable dataTable no-footer table-responsive" id="dtOrderStatuses" role="grid" aria-describedby="dtOrderStatuses" style="border-collapse: collapse !important">
                    <thead>
                        <tr>
                            <td>
                                Id
                            </td>
                            <td>
                                Name
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderStatuses)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-12 my-5">
        <div class="card">
            <div class="card-header"> Product Categories</div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable dataTable no-footer table-responsive" id="dtProductCategories" role="grid" aria-describedby="dtProductCategories" style="border-collapse: collapse !important">
                    <thead>
                        <tr>
                            <td>
                                Id
                            </td>
                            <td>
                                Name
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductCategories)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-12 my-5">
        <div class="card">
            <div class="card-header"> Products</div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable dataTable no-footer table-responsive" id="dtProducts" role="grid" aria-describedby="dtProducts" style="border-collapse: collapse !important">
                    <thead>
                        <tr>
                            <td>
                                Id
                            </td>
                            <td>
                                Name
                            </td>
                            <td>
                                Price
                            </td>
                            <td>
                                Product Category
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.ProductCategory
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-12 my-5">
        <div class="card">
            <div class="card-header"> Menues</div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable dataTable no-footer table-responsive" id="dtMenues" role="grid" aria-describedby="dtMenues" style="border-collapse: collapse !important">
                    <thead>
                        <tr>
                            <td>
                                Id
                            </td>
                            <td>
                                Name
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Menues)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-12 my-5">
        <div class="card">
            <div class="card-header"> Customers</div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable dataTable no-footer table-responsive" id="dtCustomers" role="grid" aria-describedby="dtCustomers" style="border-collapse: collapse !important">
                    <thead>
                        <tr>
                            <td>
                                Id
                            </td>
                            <td>
                                Firstname
                            </td>
                            <td>
                                Contact
                            </td>
                            <td>
                                Address
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customers)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Firstname
                                </td>
                                <td>
                                    @item.Contact
                                </td>
                                <td>
                                    @item.Address
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#Customers').DataTable();
            $('#Customers').attr('style', 'border-collapse: collapse !important');

            $('#dtOrderStatuses').DataTable();
            $('#dtOrderStatuses').attr('style', 'border-collapse: collapse !important');

            $('#dtProductCategories').DataTable();
            $('#dtProductCategories').attr('style', 'border-collapse: collapse !important');

            $('#dtProducts').DataTable();
            $('#dtProducts').attr('style', 'border-collapse: collapse !important');

            $('#dtMenues').DataTable();
            $('#dtMenues').attr('style', 'border-collapse: collapse !important');

        });

    </script>
}